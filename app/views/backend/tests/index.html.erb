<% if notice %>
<p id="notice" class="alert alert-success" role="alert" ><%= notice %></p>
<% end %>

<h1>Listado de Tests</h1>

<table class="table table-hover table-bordered table-responsive" align="center">
  <thead>
    <tr>
      <th class="text-center" >Nombre</th>
      <th  class="text-center" colspan="4"> Acciones</th>
    </tr>
  </thead>

  <tbody>
    <% @tests.each do |test| %>
      <tr>
        <td><%= test.name %></td>
        <td><%= link_to 'Preguntas y respuestas', [:backend, test], { :class=>"btn btn-info"}  %></td>
        <td><%= link_to 'Vista previa', backend_test_preview_path(test), {:class=>"btn btn-success" } %></td>
        <td><%= link_to 'Editar',  edit_backend_test_path(test), {:class=>"btn btn-warning" }  %></td>
        <td><%= link_to 'Borrar', [:backend, test], {method: :delete, data: { confirm: 'Desea eliminar este Test?' }, :class=>"btn btn-danger" }  %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Crear un nuevo Test', new_backend_test_path, { :class=>"btn btn-success" } %>
