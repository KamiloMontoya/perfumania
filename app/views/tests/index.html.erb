<p id="notice"><%= notice %></p>

<h1>Listado de Tests</h1>

<table class="table table-hover table-bordered table-responsive" align="center">
  <thead>
    <tr>
      <th>Nombre</th>
      <th colspan="3"> Acciones</th>
    </tr>
  </thead>

  <tbody>
    <% @tests.each do |test| %>
      <tr>
        <td><%= test.name %></td>
        <td><%= link_to 'Preguntas y respuestas', test, { :class=>"btn btn-info"}  %></td>
        <td><%= link_to 'Editar', edit_test_path(test), {:class=>"btn btn-warning" }  %></td>
        <td><%= link_to 'Borrar', test, {method: :delete, data: { confirm: 'Desea eliminar este Test?' }, :class=>"btn btn-danger" }  %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Crear un nuevo Test', new_test_path, { :class=>"btn btn-success" } %>
