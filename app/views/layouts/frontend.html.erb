  function update_poduct_info(id){
    // $( "#img-product" ).html("");
    // $('#img-product').html('<div class="text-center" ><img src="/site/img/loading.gif"/></div>');
    $.ajax({
       type: "GET",
       url: "/frontend/product_detail/"+id,
       dataType: "json",
       success: function (data) {
           $( "#img-product" ).html("");
           $( "#desc-product" ).html("");
           $( "#name-product" ).html("");
           $( "#img-product" ).append( '<img   style="width: 100%" onclick="modal_funt('+ id +')" src=' + data.img_medium + '>');
           $( "#name-product" ).append(data.product.name);
           if( data.video_id != ''){
              $( "#desc-product" ).append( "<p>" + data.product.description + "</p>"+
              '<iframe style="z-index: 100;" width="100%" src="https://www.youtube.com/embed/'+data.video_id+'" frameborder="0" allowfullscreen ></iframe> ');
            }else{
              $( "#desc-product" ).append( "<p>" + data.product.description + "</p>");     
           }

           if (typeof(changge_related_prod) != 'undefined' && changge_related_prod != null){
             productos_relacionados(id);
           }

        }
    });
  }

  function productos_relacionados(id) {
    // $("#owl-productos").html('<div class="text-center" ><img src="/site/img/loading.gif"/></div>');  
    $.ajax({
         type: "GET",
         url: "/frontend/product_related/"+id,
         dataType: "json",
         success: function (data) {
          var owl = $('.owl-carousel');
          var owlInstance = owl.data('owlCarousel');
            var products = data.related_products;
            var template = "";
            for (i in products){
              template = template+
                              // '<div class="item view view-tenth">'+
                              //   '<img style="width: 240px; height: 240px" src="'+products[i].img_medium_url+'"></img>'+
                              //   '<div class="mask">'+
