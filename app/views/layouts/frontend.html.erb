  function modal_funt(id) {
    $("#myModal").modal('toggle');
    $('#loading-modal').html('<div><img src="/site/img/loading.gif"/></div>');
    $( "#desc-product-modal" ).html("");
    $( "#img-product-modal" ).html("");
    $( ".modal-title" ).html("");
    $( "#btn_modal" ).hide();
      $.ajax({
         type: "GET",
         url: "/frontend/product_detail/"+id,
         dataType: "json",
         success: function (data) {
             $( ".modal-title" ).html("");
             $( "#desc-product-modal" ).html("");
             $( "#img-product-modal" ).html("");
             $('#loading-modal').html('');
             
             $( ".modal-title" ).append( data.product.name);
             $( "#img-product-modal" ).append('<img width="100%" height="100%" src=' + data.img_medium + '>');
             $( "#desc-product-modal" ).append( "<p>" + data.product.description + "</p>"+
              '<iframe style="z-index: 100;" width="100%" height="100%" src="https://www.youtube.com/embed/'+data.video_id+'" frameborder="0" allowfullscreen ></iframe> ');
             $( "#btn_modal" ).show();
             

              $( "#img-product" ).html("");
               $( "#desc-product" ).html("");
               $( "#name-product" ).html("");
               $( "#img-product" ).append( '<img  width="100%" height="100%" onclick="modal_funt('+ id +')" src=' + data.img_medium + '>');
               $( "#name-product" ).append(data.product.name);
               $( "#desc-product" ).append(  "<p>" + data.product.description + "</p>"+
