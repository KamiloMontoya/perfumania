                              //   '</div>'+
                              // '</div>'; 
                               '<div class="item view view-tenth"  style="margin-right: 10px; margin-left: 10px">'+
                                '<a style="cursor:zoom-in;" class="" data-toggle="tooltip" data-placement="top" onclick="modal_funt('+products[i].id+');" title="'+products[i].name+'">'+
                                '<img style="width: 100%; height: 240px; margin-right: 10px; margin-left: 10px" src="'+products[i].img_medium_url+'"></img></a>'+  
                              '</div>';         
            } 
            $("#owl-productos").html('');
            $("#owl-productos").html(template);
            // if instance is existing
            if(owlInstance != null){
                owlInstance.reinit();
           }
         }
     });
  }

  function modal_funt(id) {
    $("#myModal").modal('toggle');
