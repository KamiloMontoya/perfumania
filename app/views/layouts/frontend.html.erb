    $( "#desc-product-modal" ).html("");
    $( "#img-product-modal" ).html("");
    $( ".modal-title" ).html("");
    $( "#btn_modal" ).hide();
      $.ajax({
         type: "GET",
         url: "/frontend/product_detail/"+id,
         dataType: "json",
         success: function (data) {
              $( ".modal-title" ).html("");
              $( "#desc-product-modal" ).html("");
              $( "#img-product-modal" ).html("");
              $('#loading-modal').html('');
             
