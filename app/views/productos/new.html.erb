<h1> Formulario de creacion de productos </h1>

 <div class="form-group">

<%= form_for :producto, url: productos_path do |f| %>
  <div class="form-group" >
    <label for="" class="col-sm-2 control-label"><%= f.label :title %></label>
    <%= f.text_field :title, calss: "form-control" %>
  </div>
 
  <div class="form-group">
    <label for="" class="col-sm-2 control-label"><%= f.label :text %></label>
    <%= f.text_area :text, calss: "form-control"  %>
  </div>
 
  <%= f.submit %>
<% end %>

</div>