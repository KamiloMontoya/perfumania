<!-- BANNER -->
<div class="container-fluid">
  <div class="row mar-b-50">
    <div class="col-lg-12 col-md-12 col-sm-12">
      <div class="slider-wrapper">
        <div class="responisve-container">
          <div class="slider">
            <div class="fs_loader"></div>
               <% Product.all.order(top_position: :asc).limit(3).each do |product| %>
                  <div class="slide"> 
                  <h1    style="color:white"
                      data-position="20,80" data-in="top" data-step="1"  data-ease-in="easeOutBounce">Perfumanía Shop <br> Inspirada en ... </h1>
                                  
                  <h2 style="color:white"
                      data-position="130,80" data-in="right" data-step="1" ><%= product.name %></h2>

                  <a data-position="270,80" data-in="right" data-step="1"  href="/frontend/products/<%=product.category_id %>" class="btn btn-info btn-lg da-link">
                    Ver más
                  </a> 
                  <img  src=<%= product.image.url(:medium) %> data-step="1"
                      data-position="50,600" data-in="left" data-out="fade">
                </div>
             <% end %>   
          </div>
        </div>
      </div>
   </div>
  </div>

  <div class="row mar-b-50">
    <div class="col-md-12">
      <div class="text-center feature-head wow fadeInDown">
        <h1 class="">
          Disfruta lo mejor de Perfumania Shop...
        </h1>
     
        <!-- <div class="col-md-offset-4"> -->
