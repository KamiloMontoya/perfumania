<script type="text/javascript">
  $(window).load(function(){

    $('.slider').fractionSlider({
      'fullWidth':      true,
      // 'controls':       true, 
      'pager':        true,
      'responsive':       false,
      'dimensions':       "1000,400",
      'increase':       false,
      'pauseOnHover':     true
    });

    function createSidebarLi(json){
      return ("<option value="+json.id+">" + json.name + "</option>");
    };

    //Configuración para el mapa de google maps

    var markers_array = [];

    $( "#map_city" ).change(function() {
      var val = $(this).val();
      if (val != ""){
        marker = markers_array[val];
        handler.getMap().setZoom(16);
        marker.setMap(handler.getMap()); //because clusterer removes map property from marker
        marker.panTo();
        google.maps.event.trigger(marker.getServiceObject(), 'click');
      }else{
        handler.getMap().setZoom(8);
      } 
    });


    function createSidebar(json_array){
      var html = '<option value=""> Selecciona tu tienda más cercana ... </option>';
      _.each(json_array, function(json){
        var $li = $( createSidebarLi(json) );
        html = html + createSidebarLi(json);
        markers_array[json.id] = json.marker;
      });
      $('#map_city').html(html);
    };

    handler = Gmaps.build('Google');
    handler.buildMap({ internal: {id: 'map'}}, function(){
      var json_array = [
        { lat: 4.736793536621434, lng: -74.08495742781002, id: 1 ,name: 'Bogotá - Suba, Cra 91 # 139-06', infowindow: "Cra 91 # 139-06 Local 4, Bogotá" },
        { lat: 4.675964975662218, lng: -74.14207047777097, id: 2 ,name: 'Bogotá - Fontibon, Cra 100 # 20c-23', infowindow: "Cra 100 # 20c-23, Bogotá - Fontibon" },
        { lat: 4.65682667077523, lng: -74.05909287846873, id: 3 ,name: 'Bogotá - Chapinero, Cra 11 # 71-65', infowindow: "Cra 11 # 71-65, Bogotá - Chapinero" },
        { lat: 5.0672307, lng: -75.51491520000002, id: 4 ,name: 'Manizales, Cra 23 # 26-11', infowindow: "Cra 23 # 26-11, Manizales" },
        { lat: 5.0683354, lng: -75.51951170000001, id: 5 ,name: 'Manizales, Cra 21 # 19-13', infowindow: "Cra 21 # 19-13, Manizales" }
      ];

      var markers = handler.addMarkers(json_array);

      _.each(json_array, function(json, index){
        json.marker = markers[index];
      });

      createSidebar(json_array);
      handler.bounds.extendWith(markers);
      handler.fitMapToBounds();
      handler.getMap().setZoom(8);
    });

  });
</script>





