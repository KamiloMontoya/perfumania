                      </a>
                    </div>
                    <a href="/frontend/tips" >Tips</a>
                  </div>
                 
              </div>
          </div>
          <!--recent work end-->
        </div>

     </div>

        <!-- </div> -->
    </div>
  </div>


  <!--property start-->
  <div class="property gray-bg">
      <div class="row">
        <div class="col-lg-6 col-sm-6 col-md-6 text-center wow fadeInLeft">
          <h1> Top 10 productos destacádos</h1>
          <hr>

          <div class="col-lg-6 col-sm-6 col-md-6">
            <ul id="list-top" class="list-unstyled">
            <% @top_products.each do |product| %>
              <li style="cursor:pointer;" id=<%= product.id %> onclick="modal_funt(<%= product.id %>);" ><a></i><%= product.name %></a></li>
            <% end %>
            </ul> 
          </div>
          <div class="col-lg-6 col-sm-6 col-md-6">
            <div id="img-product">
                  <% if @top_products.first %>
                  <%= image_tag(@top_products.first.image.url(:medium), width: "100%", height: "100%") %>
                  <% end %>
              </div>      
          </div>
        <!--   <hr> <a href="/frontend/products_all" class="btn btn-purchase">
            Todas nuestras fragancias
          </a> -->
        </div>
        <div class="col-lg-6 col-sm-6 col-md-6 text-center wow fadeInRight">
          <h1>
            Tips
          </h1>
          <hr>
          <% Tip.all.limit(10).each do |tip|%>
          <p>
            <a href="<%=url_for(frontend_tips_path)%>/#tip-<%=tip.id%>">
            <i class="fa fa-check fa-lg pr-10">
            </i>
             <%= tip.name %>..
             </a>
          </p>
          <% end%>
          <a href=<%= url_for(frontend_tips_path) %> class="btn btn-purchase">
            Ver todos los tips
          </a>
        </div>
      </div>

  </div>
