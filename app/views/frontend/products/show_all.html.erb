        </div>    
    </div>

    <div class="col-md-3 col-md-offset-1">
        <div class="candidate wow fadeInRight">
            <div id="img-product">
                <% if @products.first %>
                <%= image_tag(@products.first.image.url(:medium), width: "240", height: "240") %>
                <% end %>
            </div>
        </div>     
    </div>
    <div class="col-md-4">
