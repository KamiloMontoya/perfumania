<%= render "frontend/partial/modal_product" %>

<!-- Baner Fragancias -->
<div class="container">
    <div class="row">
        <div class="col-lg-8 col-md-8  col-sm-8 col-lg-offset-2 col-md-offset-2 col-sm-offset-2  recent">
            <h3>Productos relacionados</h3>
            <p></p>
            <div id="owl-demo" class="owl-carousel owl-theme wow fadeIn">

            <% @products.each do |product| %>
              <div class="item view view-tenth">
                <%= image_tag(product.image.url(:thumb))%>
                <div class="mask">
                    <a class="info" data-toggle="tooltip" data-placement="top" onclick="modal_funt(<%= product.id %>);" title=<%= product.name%>>
                    <i class="fa fa-link"></i>
                    </a>
                </div>
              </div>
             <% end %>             
            </div>
        </div>
    </div>
        <!--recent work end-->
</div>


<script src="/site/js/jquery.js"></script>  
<script src="/site/js/bootstrap.min.js"></script> 
<script src="/site/js/wow.min.js"></script>
<script src="/site/assets/owlcarousel/owl.carousel.js"></script>


<script>
    $("#owl-demo").owlCarousel({
            items : 4
        });

    $( "li" ).mouseover(function() {
        var id = $( this ).attr("id");
        $.ajax({
           type: "GET",
           url: "/frontend/product_detail/"+id,
           dataType: "json",
           success: function (data) {
               $( "#img-product" ).html("");
               $( "#desc-product" ).html("");
               $( "#name-product" ).html("");
               $( "#img-product" ).append( '<img  width="240" height="240" onclick="modal_funt('+ id +')" src=' + data.img_medium + '>');
               $( "#name-product" ).append(data.product.name);
               $( "#desc-product" ).append( "<p>" + data.product.description + "</p>");
           }
       });
    });

    wow = new WOW(
      {
        boxClass:     'wow',      // default
        animateClass: 'animated', // default
        offset:       0          // default
      }
    );

    function modal_funt(id) {
        $.ajax({
           type: "GET",
           url: "/frontend/product_detail/"+id,
           dataType: "json",
           success: function (data) {
               $( ".modal-title" ).html("");
               $( "#desc-product-modal" ).html("");
               $( "#img-product-modal" ).html("");
               
               $( ".modal-title" ).append( data.product.name);
               $( "#img-product-modal" ).append('<img width="240" height="240" src=' + data.img_medium + '>');
               $( "#desc-product-modal" ).append( "<p>" + data.product.description + "</p>");
               $("#myModal").modal('toggle');
           }
       });
    };

    wow.init();
    
</script>