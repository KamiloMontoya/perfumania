<!--breadcrumbs start-->
<div class="breadcrumbs">
  <div class="container">
    <div class="row">
      <div class="col-lg-4 col-sm-4">
        <h2 class="wow fadeIn"> <%= Category.find(@category).name %> </h2>
      </div>
      <div class="col-lg-8 col-sm-8">
        <ol class="breadcrumb pull-right">
          <li>
            <a href="/">
              Inicio
            </a>
          </li>
          <li>
            <a href="/frontend/products_all">
              Nuestros Productos
            </a>
          </li>
          <li class="active">
           <%= Category.find(@category).name %>
          </li>
        </ol>
      </div>
    </div>
  </div>
</div>
    
<!-- <div class="property gray-bg"> -->

  <div class="container">
    <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12 career-head">
       <!--  <%= Category.find(@category).name %> -->
        </div>
    </div>
    <div class="row">

    <div class="col-lg-5 col-sm-5  col-md-5 ">
        <div class="candidate wow fadeInLeft">
            <ul id="list" class="list-unstyled">
                <% @products.each do |product| %>
                <li style="cursor:pointer;" onclick="update_poduct_info(<%= product.id %>);"><i class="fa fa-angle-right pr-10"></i> <a><%= product.name %> </a></li>
                <% end %>
            </ul>
            <%= paginate @products, :theme => 'twitter-bootstrap-3', :pagination_class => "pagination-small pagination-centered" %>

        </div>    
    </div>
    <div class="col-lg-3 col-sm-3 col-md-3">
        <div class="candidate wow fadeInRight">
            <div id="img-product">
                <% if @products.first %>
                <%= image_tag(@products.first.image.url(:medium),  style: "width: 100%") %>
                <% end %>
            </div>
        </div>     
    </div>
    <div class="col-lg-4  col-sm-4 col-md-4">
        <div class="candidate wow fadeInRight">
            <% if @products.first %>
            <h1 id="name-product"><%= @products.first.name %></h1>
            <div id="desc-product">  
                <p><%= @products.first.description %></p>  
             </div> 
             <% end %> 
        </div>     
    </div>
  </div>
<!-- </div> -->

<hr>

<!-- Baner Fragancias -->
<div class="bg-lg">
  <div class="container">
      <div class="row">
          <div class="col-lg-12 col-md-12 col-sm-12 recent">
              <h3>Productos relacionados</h3>
              <p></p>
              <div id="owl-productos" class="owl-carousel owl-theme wow fadeIn">
                  <% @products.each do |product| %>
                    <div class="item view view-tenth">
                    <a style="cursor:zoom-in;" class="" data-toggle="tooltip" data-placement="top" onclick="modal_funt(<%= product.id %>);" title=<%= product.name%>>
                      <%= image_tag(product.image.url(:medium), style: "width: 100%; height: 100%")%>
                       </a>
                    </div>
                   <% end %>     
              </div>
          </div>
      </div>
          <!--recent work end-->
  </div>
</div>
<br>
</div>

